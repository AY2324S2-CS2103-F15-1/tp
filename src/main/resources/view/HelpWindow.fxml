<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.stage.Stage?>

<fx:root resizable="false" title="Help" type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
  <icons>
    <Image url="@/images/help_icon.png" />
  </icons>
  <scene>
    <Scene>
      <stylesheets>
        <URL value="@HelpWindow.css" />
      </stylesheets>

      <BorderPane fx:id="helpMessageContainer">
        <center>
          <Label fx:id="helpMessage">
            <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
          </Label>
        </center>
        <right>
          <Button fx:id="copyButton" mnemonicParsing="false" onAction="#copyUrl" text="Copy URL" BorderPane.alignment="TOP_RIGHT">
            <BorderPane.margin>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin>
          </Button>
        </right>
        <padding>
          <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
        </padding>
      </BorderPane>
    </Scene>
  </scene>
</fx:root>
